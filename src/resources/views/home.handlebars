


 {{#each items}}
<div class="mt-4">
    <div class="row">
        <div class="col-sm-6 col-lg-4">
            <div class="card" style="width: 18rem;">
                <img src="{{this.img}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.title}}</p>
                    <a href="#" class="btn btn-primary">Mua Ngay</a>
                </div>
        </div>

    </div>
</div>
{{/each}}